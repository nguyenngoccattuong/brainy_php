                            "mode": "raw",
                            "raw": "{\n    \"word\": \"test\",\n    \"pos\": \"noun\",\n    \"phonetic\": \"https://example.com/audio.mp3\",\n    \"phonetic_text\": \"/test/\",\n    \"phonetic_am\": \"https://example.com/audio_am.mp3\",\n    \"phonetic_am_text\": \"/test/\"\n}"
                        }
